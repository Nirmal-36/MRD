# =====================================
# MRD SYSTEM - ENVIRONMENT CONFIGURATION
# =====================================
# IMPORTANT: Copy this file to .env and update with your values
# DO NOT commit .env to version control!

# Django Settings
# Generate new SECRET_KEY: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# PRODUCTION SETTINGS (Uncomment and update before deployment)
# SECRET_KEY=your-new-secret-key-here
# DEBUG=False
# ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-server-ip

# Database Settings (MySQL)
DB_NAME=mrd_system
DB_USER=root
DB_PASSWORD=your-mysql-password
DB_HOST=localhost
DB_PORT=3306

# PRODUCTION DATABASE (Update with secure credentials)
# DB_NAME=mrd_system
# DB_USER=mrd_prod_user
# DB_PASSWORD=strong-secure-password-here
# DB_HOST=your-db-host
# DB_PORT=3306

# Email Settings (for OTP delivery)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=MRD System <noreply@mrd.com>
TWILIO_VERIFIED_NUMBERS=

# CORS Settings (Add your frontend URL for production)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Redis Settings (For caching - Optional for development, Recommended for production)
# Install Redis: brew install redis (macOS) or apt-get install redis (Ubuntu)
# Start Redis: redis-server
REDIS_URL=redis://127.0.0.1:6379/1

# PRODUCTION REDIS (Update with your Redis server URL)
# REDIS_URL=redis://your-redis-host:6379/1
# Or for Redis Cloud: redis://username:password@host:port/db
REDIS_URL=redis://localhost:6379/0

# Security Settings (Enable in production with HTTPS)
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_SSL_REDIRECT=True

# =====================================
# PRODUCTION-ONLY SETTINGS
# =====================================

# Sentry Error Tracking (Sign up at https://sentry.io)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_RELEASE=1.0.0

# SSL/HTTPS Configuration (Enable in production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# Email Configuration for Error Notifications (Production)
# ADMINS=Admin Name,admin@example.com;Another Admin,another@example.com
